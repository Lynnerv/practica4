@{
    ViewData["Title"] = "Recomendación de Productos";
}

<h2>Recomendación de Productos</h2>

<form method="post">
    <div class="form-group">
        <label for="userId">Ingrese su ID de Usuario (por ejemplo: U1):</label>
        <input type="text" name="userId" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Obtener Recomendaciones</button>
</form>

@if (ViewBag.Recomendaciones != null)
{
    <div class="mt-4">
        <h4>Recomendaciones para @ViewBag.UserId</h4>
        <ul class="list-group">
            @foreach (var item in ViewBag.Recomendaciones)
            {
                <li class="list-group-item">
                    <strong>Producto:</strong> @item.Item1 <br />
                    <strong>Score:</strong> @item.Item2.ToString("0.00")
                </li>
            }
        </ul>
    </div>
}
